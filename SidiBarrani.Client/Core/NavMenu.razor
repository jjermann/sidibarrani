<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">SidiBarrani</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/gameSetup" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span>Games
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/gameSetup/newgame">
                <span class="oi oi-plus" aria-hidden="true"></span>New Game
            </NavLink>
        </li>
        @if (ClientConnectionService.CurrentGameSetup != null)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="@CurrentGameStageLink">
                    <span class="oi oi-pulse" aria-hidden="true"></span>@ClientConnectionService.CurrentGameSetup.GameName
                </NavLink>
            </li>
        }
    </ul>
</div>
